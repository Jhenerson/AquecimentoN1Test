package br.com.senaigo.test.AquecimentoN1;

import org.junit.Test;

import junit.framework.TestCase;

public class ConversorTemperaturaTest extends TestCase {

	@Test
	public void testConverteCelsiusParaFahrenheit() {
		double actual = ConversorTemperatura.converteCelsiusParaFahrenheit(0);
		assertEquals(0.0, actual, 0.00001);
	}

	@Test
	public void testConverteFahrenheitParaCelsius() {
		double actual = ConversorTemperatura.converteFahrenheitParaCelsius(32);
		assertEquals(0.0, actual, 0.0001);
	}

}
